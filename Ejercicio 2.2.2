Ejercicio 2.2.2 

ACCION ejercicio_222 ES
	AMBIENTE
		sec, sec_sal1, sec_sal2: secuencia de caracter;
		v: caracter;
		DIGITO: {"1","2","3","4","5","6","7","8","9","0"};

	PROCESO
		ARR(sec);
		AVZ(sec, v);
		CREAR(sec_sal1);
		CREAR(sec_sal2);

		MIENTRAS NFDS(sec) HACER
			SI (V en DIGITO) ENTONCES
				ESC(sec_sal1, v);
			SINO
				ESC(sec_sal2, v);
			Fin_si;

			AVZ(sec, v);

		Fin_mientras;
Fin_accion.

